<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/similarMovieCardView"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_180sdp"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <ImageView
                android:id="@+id/similarMovieImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:paddingTop="@dimen/_18sdp"
                android:scaleType="centerCrop" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/similarMovieTitleText"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/similarMovieCardView"
        app:layout_constraintStart_toStartOf="@+id/similarMovieCardView"
        app:layout_constraintEnd_toEndOf="@+id/similarMovieCardView"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/yellow"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold|italic"/>
    <TextView
        android:id="@+id/similarMovieReleaseDateText"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/similarMovieTitleText"
        app:layout_constraintStart_toStartOf="@+id/similarMovieTitleText"
        app:layout_constraintEnd_toEndOf="@+id/similarMovieTitleText"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>