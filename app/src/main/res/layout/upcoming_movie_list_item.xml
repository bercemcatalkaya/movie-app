<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/upcomingMovieCardView"
        android:layout_width="@dimen/_175sdp"
        android:layout_height="@dimen/_260sdp"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <ImageView
                android:id="@+id/upcomingMovieImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:paddingTop="@dimen/_18sdp"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/favoriteImageView"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:contentDescription="@null"
                android:gravity="end|top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/upcomingMovieTitleText"
        android:layout_width="@dimen/_175sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/upcomingMovieCardView"
        app:layout_constraintStart_toStartOf="@+id/upcomingMovieCardView"
        app:layout_constraintEnd_toEndOf="@+id/upcomingMovieCardView"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/yellow"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold|italic"/>
    <TextView
        android:id="@+id/upcomingMovieReleaseDateText"
        android:layout_width="@dimen/_175sdp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/upcomingMovieTitleText"
        app:layout_constraintStart_toStartOf="@+id/upcomingMovieTitleText"
        app:layout_constraintEnd_toEndOf="@+id/upcomingMovieTitleText"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>